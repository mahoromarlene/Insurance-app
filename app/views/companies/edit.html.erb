<h1>Update Company</h1>
<%= form_tag "/companies/#{@company.id}", method: :patch do %>
  <div>
    Company Name
  </div>
  <div>
    <input type="text" name="name" value="<%= @company.name %>">
  </div>
  <div>
    Description
  </div>
  <div>
    <input type="text" name="description" value="<%= @company.description %>">
  </div>
  <div>
    <input type="submit" value="Update">
  </div>
<% end %>