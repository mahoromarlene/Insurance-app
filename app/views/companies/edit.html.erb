<h1>Update Company</h1>
<%= form_tag "/companies/#{@company.id}", method: :patch do %>
<div class="row">
  <label for="name">Company Name</label><br>
  <input id="name" type="text" name="name" size="30" value="<%= @company.name %>">
</div>
<div>
  <label for="logo">Logo Url</label><br>
  <input id="logo" type="text" name="logo" size="30" value="<%= @company.logo%>">
</div>
<div>
 <label for="description">Description</label>
 <textarea id="description" type="text" name="description" rows="10" cols="60" value="<%= @company.description %>"></textarea><br>
</div>
<div>
  <input type="submit" value="Update">
</div>
<% end %>