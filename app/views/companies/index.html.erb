<h1>List of Companies</h1>

<div class="container">
<div class="table-responsive">
  <table class="table table-striped">
    <% @companies.each do |company| %>
  <div class="row">
    <div class="row"> 
      <div class="col-xs-12 col-sm-3 col-md-3">
        <a href="#">
          <img src="<%= company.logo %>" class="img-responsive img-box img-thumbnail" width="200" height="200"> 
        </a>
      </div>
      <div class="col-xs-12 col-sm-8 col-md-8">
        <h2><%= link_to company.name, "companies/#{company.id}" %></h2>
        <p><%= company.description %></p>
      </div>
    </div>  
  </div>
    <% end %>
    </table>
    </div>
  <% if current_user && current_user.is_company %>
  <%= button_to "Add a new Company", "companies/new", class: "btn btn-primary", method: :get %>
  <% end %>
</div>
