<h1>Service: <%= @insuranceservice.name %></h1>
<h2>Service Details</h2>
<p><%= @insuranceservice.description %></p>
<p>Price: <%= @insuranceservice.price %></p>
<p>Company name: <%= @insuranceservice.company.name %></p>

<% if current_user && current_user.is_company %>
  <%= button_to "Edit service", "/insuranceservices/#{@insuranceservice.id}/edit", class: "btn btn-primary", method: :get %>
<% end %>
<% if current_user %>
  <%= button_to "Make a Request", "/requests/new", class: "btn btn-primary", method: :get %>
<% end %>