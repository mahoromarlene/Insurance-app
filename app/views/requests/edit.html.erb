<div class="col-md-1"></div>
<div class="col-md-10">
  <h1>Fill out the request form</h1>
  <%= form_tag "/requests/#{@request.id}", :html => {:multipart => true}, method: :patch do %>

  <div class="row">
    <label for="name">First Name</label><br>
    <input id="name" type="text" name="first_name" size="30" value="<%= @request.first_name %>">
  </div><br>
  <div class="row">
    <label for="name">Last Name</label><br>
    <input id="name" type="text" name="last_name" size="30" value="<%= @request.last_name %>">
  </div><br>
  <div class="row">
    <label for="name">Phone Number</label><br>
    <input id="phone_number" type="text" name="phone_number" size="30" value="<%= @request.phone_number %>">
  </div><br>
  <div class="row">
    <label for="name">Email</label><br>
    <input id="email" type="email" name="email" size="30" value="<%= @request.email %>">
  </div><br>
  <div class="row">
    <label for="name">Insurance Service</label><br>
    <select name="insurance_service_id">
     <option selected="<%= @request.insurance_service_id %>" disabled selected>Select your option</option>
     <% @insuranceservices.each do |insuranceservice| %>
     <option id="name" type="text" name="insurance_service_id" size="30" value="<%= insuranceservice.id %>"><%= insuranceservice.name %></option>
     <% end %>
   </select>
 </div><br>
 <div class="row">
   <label for="name">Company name</label><br>
   <select name="company_id">
   <option selected="<%= @request.company_id %>" disabled selected>Select your option</option>
   <% @companies.each do |company| %>
   <option id="name" type="text" name="company_id" size="30" value="<%= company.id %>"><%= company.name %></option>
   <% end %>
 </select>
</div>
<div class="row">
  <label for="description">Description</label><br>
  <textarea id="description" type="text" name="description" rows="10" cols="60" value="<%= @request.description %>"></textarea> 
</div><br>
<div>
  <input type="submit" value="Update">
</div>
<% end %>
</div>